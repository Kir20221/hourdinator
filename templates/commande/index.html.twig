{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Designation</th>
                <th>DateLivrReelle</th>
                <th>DateLivrEstimee</th>
                <th>MontantHT</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.code }}</td>
                <td>{{ commande.designation }}</td>
                <td>{{ commande.dateLivrReelle ? commande.dateLivrReelle|date('d/m/Y') : '' }}</td>
                <td>{{ commande.dateLivrEstimee ? commande.dateLivrEstimee|date('d/m/Y') : '' }}</td>
                <td>{{ commande.montantHT }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
