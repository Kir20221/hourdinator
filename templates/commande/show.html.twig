{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ commande.code }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ commande.designation }}</td>
            </tr>
